{
    "name": "Videomarks - My YouTube Bookmarks",
    "version": "1.0.0",
    "description": "Saving timestamps of YouTube videos for the users reference",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/bookmark.png",
                "assets/play.png",
                "assets/delete.png",
                "assets/save.png"
            ],
            "matches": [
                "https://*.youtube.com/*"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/ext-icon.png",
            "24": "assets/ext-icon.png",
            "32": "assets/ext-icon.png"
        },
        "default_title": "My YouTube Video Bookmarks",
        "default_popup": "popup.html"  /*needs to change*/
    },
    "manifest_version": 3
}
